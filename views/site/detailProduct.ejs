<%- include('../partials/header') %>

    <!-- PRODUCT INTRO -->
    <section class="productIntro">
        <div class="container">
            <div class="detail-navBar">
                <ul>
                    <li><a href="index.html">Trang chủ</a></li>
                    <li id="cate-product">
                        <% for(let cate of catelog){ %>
                            <% if(cate.idCategory==product[0].idCategory){ %>
                                <a href="#">
                                    <%= cate.nameCategory %>
                                </a>
                                <% } %>
                                    <% } %>
                    </li>
                    <li id="name-product">
                        <a href="/detailProduct/<%= product[0].idProduct %>">
                            <%= product[0].nameProduct %>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="productIntro__info">
                <div class="row">
                    <div class="col-5">
                        <div class="productIntro__slick">
                            <div class="productIntro__promotion">Sale 10%</div>
                            <div class="productIntro__nav">
                                <% for(let img of arrImgNav){ %>
                                    <div class="nav--item">
                                        <div class="item--img">
                                            <img src="/images/products/<%= img %>" alt="">
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="productIntro__slide">
                                <% for(let img of arrImgZoom){ %>
                                    <div class="slide--item">
                                        <a href="/images/products/<%= img %>" data-fancybox="gallery">
                                            <img src="/images/products/<%= img %>" alt="">
                                        </a>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="productIntro__des">
                                <img src="/images/zoom-in.png" alt="">
                                <span>Bấm vào để xem ảnh phóng to</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="productIntro__detail">
                            <div class="productIntro__top">
                                <h1>
                                    <%= product[0].nameProduct %>
                                </h1>
                                <div class="productIntro__below">
                                    <div class="productIntro__brand">
                                        <span>Thương hiệu: </span>
                                        <a href="#">LG</a>
                                    </div>
                                    <div class="productIntro__id">
                                        <span>Mã Sản phẩm: </span>
                                        <span class="productIntro__code">27GR95QE-B.ATV</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row productIntro__detailPrice">
                                <div class="col-7">
                                    <div class="productIntro__price">
                                        <div class="price-new">
                                            <%= product[0].price %> <span class="vnd">đ</span>
                                        </div>
                                        <div class="price-old">
                                            <%= product[0].price %> <span class="vnd">đ</span>
                                        </div>
                                        <div class="price-des">(Đã bao gồm VAT)</div>
                                    </div>
                                    <div class="productIntro__guarantee">
                                        <span>Bảo hành: 12 tháng. </span><a href="#">(Quy định bảo hành)</a>
                                    </div>
                                    <div class="productIntro__option"></div>
                                    <div class="productIntro__btn">
                                        <a href="#" class="btn--addCart" id="addCart">Thêm vào giỏ hàng</a>
                                        <a class="btn--installment1" href="#">Trả góp tiền mặt <div class="btn-des">Chỉ
                                                từ
                                                3.441.000 ₫/tháng</div></a>
                                        <a class="btn--installment2" href="#">Trả góp 0% qua thẻ <div class="btn-des">
                                                Visa,
                                                Master, JCB</div></a>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="productIntro__support">
                                        <h6 class="support-title">Tư vấn & Mua hàng - Gọi <a href="tel:19007777">1900
                                                7777</a></h6>
                                        <ul>
                                            <li>Freeship với đơn hàng trên 1.000.000đ</li>
                                            <li>Giao hàng ngay (Nội thành TP.HCM)</li>
                                            <li>Giao trong vòng 2 đến 3 ngày làm việc (Toàn quốc)</li>
                                        </ul>
                                        <p class="support-free">MIỄN PHÍ CHARGE THẺ</p>
                                        <div class="support-img">
                                            <img src="/images/payment/ft-img6.png" alt="">
                                            <img src="/images/payment/ft-img7.png" alt="">
                                            <img src="/images/payment/ft-img8.png" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="productIntro__space">
                <div class="productIntro__other">
                    <h5 class="other-title">Sản phẩm tương tự</h5>
                    <div class="other-slider">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>