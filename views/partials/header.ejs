<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gadgets</title>
    <!-- BS5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- SLICK CSS -->
    <link rel="stylesheet" href="/css/slick.css">
    <link rel="stylesheet" href="/css/slick-theme.css">
    <!-- FONT AWSOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- GG FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap"
        rel="stylesheet">
    <!-- FANCYBOX CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <!-- HEADER -->
    <header>
        <div class="header__top">
            <nav class="gadgetsNavbar navbar navbar-expand-lg">
                <div class="container">
                    <a class="navbar-brand" href="/"><img src="/images/logo-light.svg" alt=""></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#gadgetsNavbarContent" aria-controls="gadgetsNavbarContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="gadgetsNavbarContent">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">TIN TỨC</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link" href="/allProduct">SẢN PHẨM</a>
                            </li>
                        </ul>
                        <form class="header__form d-flex" id="form-searchPd" role="search">
                            <input id="header__inputSearch" class="header__input" type="search"
                                placeholder="Nhập sản phẩm tìm kiếm..." aria-label="Search">
                            <button id="header__btnSearch" class="header__btn" type="button"><i
                                    class="fa fa-search"></i></button>
                        </form>
                        <div class="header__right d-flex">
                            <div class="right-check">
                                <a class="right-link" href="">
                                    <i class="fa fa-clipboard-list"></i>
                                    <span>Kiểm tra đơn hàng</span>
                                </a>
                            </div>
                            <div class="right-login">
                                <a class="right-link" href="/login">
                                    <i class="fa fa-user"></i>
                                </a>
                            </div>
                            <div class="right-cart">
                                <div class="dropdown">
                                    <button class="right-link dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="number">0</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <div class="dropdown-title">
                                            <p> Giỏ hàng</p>
                                        </div>
                                        <div class="cart-list">
                                            <div class="item">
                                                <div class="cart-item">
                                                    <a class="imgPd" id="imgPd" href="#"><img
                                                            src="/images/products/lap-2/de-1.jpg" alt=""></a>
                                                    <div class="info-item">
                                                        <a class="namePd" id="namePd" href="#">Dell Vostro 3430 -
                                                            i7-1355U - 16GB -
                                                            512GB SSD</a>
                                                        <div class="amount">
                                                            <span>Số lượng: </span>
                                                            <input type="number" name="quantity" id="quantity" min="1"
                                                                max="10" value="">
                                                        </div>
                                                        <div class="price">
                                                            <div class="price-new"><span id="cartPrice">16.990.00</span>
                                                                <span class="vnd">đ</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item">
                                                <div class="cart-item">
                                                    <a class="imgPd" href="#"><img src="/images/products/lap-2/de-1.jpg"
                                                            alt=""></a>
                                                    <div class="info-item">
                                                        <a class="namePd" href="#">Dell Vostro 3430 - i7-1355U - 16GB -
                                                            512GB SSD</a>
                                                        <div class="amount">
                                                            <span>Số lượng: </span>
                                                            <input type="number" name="quantity" id="quantity" min="1"
                                                                max="10">
                                                        </div>
                                                        <div class="price">
                                                            <div class="price-new">16.990.00 <span class="vnd">đ</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="item">
                                                <div class="cart-item">
                                                    <a class="imgPd" href="#"><img src="/images/products/lap-2/de-1.jpg"
                                                            alt=""></a>
                                                    <div class="info-item">
                                                        <a class="namePd" href="#">Dell Vostro 3430 - i7-1355U - 16GB -
                                                            512GB SSD</a>
                                                        <div class="amount">
                                                            <span>Số lượng: </span>
                                                            <input type="number" name="quantity" id="quantity" min="1"
                                                                max="10">
                                                        </div>
                                                        <div class="price">
                                                            <div class="price-new">16.990.00 <span class="vnd">đ</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="cart-checkout">
                                            <div class="cart-total">
                                                <span>Tổng tiền: </span><span class="total-money">16.990.00 <span
                                                        class="vnd">đ</span></span>
                                            </div>
                                            <div class="btn-pay">
                                                <a class="btn--checkout" href="#">Thanh toán</a>
                                            </div>
                                        </div>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="header__bottom">
            <nav class="header__menu">
                <div class="container">
                    <ul class="menu-list d-flex">
                        <% for(let cate of category) { %>
                            <li class="menu-item">
                                <a class="menu-link" href="/category/<%= cate.idCategory %>"><span>
                                        <%= cate.nameCategory %>
                                    </span></a>
                            </li>
                            <% } %>
                    </ul>
                </div>
            </nav>
        </div>
    </header>